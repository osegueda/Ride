<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".fragments.dialogFragment.DialogFragmentClass">

    <LinearLayout
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@drawable/radius_button"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textColor="@color/login_colorEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problemas para iniciar sesion?"/>
        <TextView
            android:layout_marginTop="45dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instrucciones de que hacer en caso de que un colaborador
tenga problemas para iniciar sesión con la app, podría
ser: brindar números de teléfono o e-mail o un contacto
con el encargado de esta área."/>
    </LinearLayout>

</FrameLayout>