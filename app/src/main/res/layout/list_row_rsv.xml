<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="15dp"
            app:cardMaxElevation="13dp">

            <LinearLayout
                android:id="@+id/id_layout_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/id_layout_image"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/id_card1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/content_desc_micro"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@drawable/img_microbus" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/id_container"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/id_card2"
                            android:layout_width="280dp"
                            android:layout_height="150dp"
                            android:paddingTop="7dp"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/borderstatus"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.493"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/result_round_number_txt"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginBottom="40dp"
                                android:background="@drawable/circular_txtview"
                                android:text="@string/reservation_number"
                                android:textAlignment="center"
                                android:textColor="@color/unicomer_white"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/result_txt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="25dp"
                                android:text="@string/reservation_result"
                                android:textSize="25sp"
                                tools:layout_editor_absoluteX="101dp"
                                tools:layout_editor_absoluteY="36dp" />
                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="#EBE0E0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_layout_main_container"
                    android:layout_width="match_parent"
                    android:layout_height="309dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_round"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/txt_margin_start"
                        android:layout_marginTop="@dimen/txt_margin_top"
                        android:text="@string/reservation_id" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="25dp"
                        android:background="#EBE0E0" />

                    <TextView
                        android:id="@+id/id_round_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/txt_margin_start"
                        android:layout_marginTop="@dimen/txt_margin_top"
                        android:text="@string/status" />

                    <View
                        android:id="@+id/id_line_status"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="25dp"
                        android:background="#EBE0E0" />

                    <TextView
                        android:id="@+id/id_txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/txt_margin_start"
                        android:layout_marginTop="@dimen/txt_margin_top"
                        android:text="@string/date" />

                    <View
                        android:id="@+id/id_line_date"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="25dp"
                        android:background="#EBE0E0" />

                    <TextView
                        android:id="@+id/id_reservation_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/txt_margin_start"
                        android:layout_marginTop="@dimen/txt_margin_top"
                        android:text="@string/reservation_count" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="25dp"
                        android:background="#EBE0E0" />

                    <TextView
                        android:id="@+id/id_round_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/txt_margin_start"
                        android:layout_marginTop="@dimen/txt_margin_top"
                        android:text="@string/round" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="25dp"
                        android:background="#EBE0E0" />

                    <TextView
                        android:id="@+id/id_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/txt_margin_start"
                        android:layout_marginTop="@dimen/txt_margin_top"
                        android:layout_marginBottom="0dp"
                        android:text="@string/schedule" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="8dp"
                        android:background="#EBE0E0" />

                    <Button
                        android:id="@+id/button_rsv"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:text="@string/reservar_btn"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>